<style>
    #re_chk{
        width:13%;
        margin-left:2%;
        border:0px;
        background-color:#A6A6A6;
        color:#fff;
        border-radius:5px;
    }
    @media (min-width: 767px){
        section{
            width:40%;
            min-width:500px;
            height:100%;
            margin-left:auto;
            margin-right:auto;
            border:3px solid #F15F5F;
            padding:0.2%;
            border-radius:10px;
            margin-top:5%;
        }
        label{
            width:50%;
            float:left;
        }
        .form-control{
            width:50%;
            min-height:25px;
            height:4vh;
            float:left;
        }
        .simple_form > .form-group, #detail > .form-group{
            width:100% !important;
        }
        .form-group{
            width:85%;
            float:left;
        }
        a, a:visited{
            color:#4374D9;
        }
        #re_chk{
            width:13%;
        }
        #detail{
            width:100%;
            height:30vh;
            min-height:160px;
            padding-top:7%;
            border:2px solid #000;
            border-radius:10px;
            margin-top:1%;
            padding:3%;
            margin-bottom:5%;
        }
        #base{
            width:100%;
            height:27vh;
            min-height:150px;
            border:2px solid #000;
            border-radius:10px;
            padding:3%;
        }
        .form-group > p, .gender_chk{
            float:left;
            margin-right:3% !important;
        }
        #age{
            width:20% !important;
        }
        .sub{
            float:right;
            background-color:#FFA7A7 !important;
            color:#fff !important;
            border:0px;
            border-radius:5px;
            width:20%;
            background-image:none;
        }
    }
    @media(max-width:767px){
        section{
            width:90%;
            margin-left:auto;
            margin-right:auto;
        }
        .form-group{
            margin-top:10%;
            clear:both;
        }
        #re_chk{
            width:20%;
            float:right;
            margin-bottom:5%;
        }
        .form-group > label{
            width:35%;
            float:left;
        }
        .form-group > input{
            width:65%;
        }
        .gender_chk{
            width:10% !important;
            float:left;
        }
        .form-group > p {
            float:left;
        }
        .sub{
            background-color:#FFA7A7 !important;
            color:#fff !important;
            border:0px;
            border-radius:5px;
            width:100%;
            background-image:none;
        }
    }
</style>
<section>
    <div id="base">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-group">
        <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' }%>
        <input type="button" value="중복체크" id="re_chk" onclick="myFunction()">

          <script>
          function myFunction() {
              alert("<%= f.error_notification %>");
          }
          </script>

      </div>
      <div class="form-group">
        <%= f.input :password, required: true, input_html: { class: 'form-control' } %>
      </div>
      <div class="form-group">
        <%= f.input :password_confirmation, required: true, input_html: { class: 'form-control' } %>
      </div>
    </div>
    <div id="detail">
        <div class="form-group">
            <div class="form-group">
                <label><abbr title="required">*</abbr> name</label>
                <input type="text" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="form-group">
                <label><abbr title="required">*</abbr> 연락처</label>
                <input type="text" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="form-group">
                <label><abbr title="required">*</abbr> 성별</label>
                <p>남</p>
                <input type="radio" class="gender_chk">
                <p>여</p>
                <input type="radio" class="gender_chk">
            </div>
        </div>
        <div class="form-group">
            <div class="form-group">
                <label><abbr title="required">*</abbr> 나이</label>
                <input type="text" class="form-control" id="age">
            </div>
        </div>
    </div>
      <%= f.button :submit, "Sign up", class: "btn btn-default sub" %>
    <% end %>

    <%= render "devise/shared/links" %>
</section>
